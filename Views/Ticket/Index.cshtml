<script>

    $(document).ready(function () {
        $("#busInfo").css("visibility", "hidden");
        $("#tableDiv").css("visibility", "hidden");
        $("#search").click(function (e) {
            e.preventDefault();
            $("#busInfo").css("visibility", "visible")
        })
        $(".view").click(function (e) {
            e.preventDefault();
            $("#tableDiv").css("visibility", "visible");
            $(".outlineBorder").css({"padding":"5px","boxShadow": "3px 3px 5px 5px red"})
$(this).text("Hide").click(function(){
