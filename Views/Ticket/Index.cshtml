@{
    ViewData["Title"] = "Create Ticket";
    List<int> num = new List<int>() { 1, 2, 3, 4, 5, 6, 7 };
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<h1 class="text-muted text-center">@ViewData["Title"]</h1>

<div class="container-fluid">

    <form>
        <div class="row">
            <div class="col-md-2">
                <div class="form-group">
                    <label class="form-label">From</label>
                    <select class="form-control">
                        <option>Dhaka</option>
                        <option>Rajshahi</option>
                    </select>
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label class="form-label"> To</label>
                    <select class="form-control">
                        <option>Dhaka</option>
                        <option>Rajshahi</option>
                    </select>
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label class="form-label">DeperatureDate</label>
                    <input class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <label class="form-label">Return</label>
                <input class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span class="text-danger"></span>
            </div>
            <div class="col-md-2" style="margin-top:2rem">

                <button type="submit" id="search" class="btn btn-success">Search</button>
            </div>
        </div>

    </form>

</div>
<div  class="outlineBorder mt-2">


