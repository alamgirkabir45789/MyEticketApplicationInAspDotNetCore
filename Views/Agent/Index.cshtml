@model IEnumerable<MyEticketApplication.Models.Agent>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-muted">New Agent</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoiningDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.JoiningDate)
            </td>
            <td>
                    <img src="~/images/@item.UrlImage" alt="" height="100" width="100" class="img-circle" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AgentId" class="btn btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AgentId" class="btn btn-secondary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AgentId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
