@model IEnumerable<MyEticketApplication.Models.RouteFrom>;
<h1 class="text-center text-muted">From Route List</h1>

<div>
<a class="btn btn-primary btn-sm mb-1" asp-action="Create" asp-controller="RouteFrom">Create</a>
</div>
<table class="table table-bordered">
    <thead>
       <tr>
            <th>SL/No</th>
            <th>From</th>    
            <th>To</th>
            <th>Actions</th>
       </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Select((value,index)=>new{index,value}))
        {

            <tr>
                <td>@( item.index + 1)</td>
                <td>@item.value.RouteFromName</td>
                <td>@item.value.RouteToId</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-controller="RouteFrom" asp-route-RouteFromId="@item.value.RouteFromId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-RouteFromId="@item.value.RouteFromId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


